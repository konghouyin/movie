<view class="search-template">
    <image class="search-icon" src='/image/search.png'></image>
    <input class="find-movie" maxlength="30" placeholder="找电影" bindtouchend="searchbtn"></input>
</view>
<swiper class="swiper-wrap" indicator-dots="true" autoplay="true" interval="3000" circular="true" indicator-color="#ccc" indicator-active-color="#fff">
<swiper-item class="swiper-item"><image src="https://img3.doubanio.com/view/photo/l/public/p2556562870.webp"></image></swiper-item>
<swiper-item class="swiper-item"><image src="https://img3.doubanio.com/view/photo/l/public/p2556096362.webp"></image></swiper-item>
<swiper-item class="swiper-item"><image src="https://img3.doubanio.com/view/photo/l/public/p2556174421.webp"></image></swiper-item>
</swiper>

<view class="movie-list" wx:for="{{movieList}}" wx:for-item="item">
    <image class="movie-hb" src="{{item.pic}}"></image>
    <view class='message'>
        <view class="movie-name">{{item.name}}</view>
        <view class="movie-time">播放时长 <text style="color:rgb(245,183,31)">{{item.time}}</text> 分钟</view>
        <view class="movie-actor">{{item.actor}}</view>
        <view class="movie-type">{{item.type}}</view>
    </view>
</view>
