/* pages/main/main.wxss */
page{
    background-color: #eee;
}

.back-image {
	background-image: url("https://img1.doubanio.com/view/photo/m/public/p2555859678.webp");
	width: 100vw;
	height: 400rpx;
	background-repeat: no-repeat;
	background-size: 100% 100%;
	-moz-background-size: 100% 100%;
	filter: blur(30rpx);
	transform: scale(1.3);
	overflow: hidden;
	position: absolute;
	z-index: -1;
	background-color: #000;
}

.wrap {
	background-color: rgba(0, 0, 0, 0.5);
	overflow: hidden;
	padding: 20rpx 0 10rpx 0;
}


.movie-hb {
	width: 30vw;
	height: 300rpx;
	margin: 0 25rpx;
}

.movie-message {
	display: flex;
	flex-direction: row;
	color: #fff;
	padding-bottom: 10rpx;
	font-size: 30rpx;
}

.message {
	width: 60vw;
}

.message>view {
	margin: 10rpx 0;
}

.movie-name {
	font-size: 40rpx;
}

.movie-actor {
	isplay: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}


.part{
    margin-bottom: 20rpx;
    border-top:4rpx solid #ccc;
    border-bottom:4rpx solid #ccc;
    background-color: #fff;
    padding: 30rpx;
}

.message-hidden{
    overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}

.title{
    font-size: 35rpx;
}


.index-message{
    font-size: 30rpx;
    line-height: 45rpx;
}